<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/btn_default" >

    <TextView
        android:id="@+id/current_pos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/current_pos"
        android:textColor="@android:color/black"
        android:layout_margin="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/range_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/current_pos"
        android:hint="@string/range"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/name_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/range_gps"
        android:hint="@string/place_name"
        android:textSize="17sp" />

    <Button
        android:id="@+id/save_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name_place"
        android:text="@string/save"
        android:textSize="17sp" />

</RelativeLayout>