<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_default"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" 
        >

        <Button
            android:id="@+id/backv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" 
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_action_back"
            />
        <Button
            android:id="@+id/deletev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" 
            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_action_delete"
            />
        <Button
            android:id="@+id/sharev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" 

            android:background="@drawable/btn"
            android:drawableLeft="@drawable/ic_action_share"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/datev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:gravity="right"
                android:textSize="12sp"
                android:paddingRight="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/titlev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/contentv"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</LinearLayout>